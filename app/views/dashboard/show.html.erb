<style>

	.register-page{
		background: #808782;
	  }

	.dashboard{
		  
	}

	.nav{
		background: #f9f9f9;
		width: 100%;
		height: auto;
		overflow: hidden;
	}

	.avatar {
		vertical-align: middle;
		border-radius: 50%;
