<section class='admin-dashboard'>
  <section class='dashboard-info'>
    <p>Name: <%= @user.name %></p>
    <p>Location: <%= @user.location %></p>
    <p>State: <%= @user.state %></p>
    <p>Email: <%= @user.email %></p>
    <p>Role: <%= @user.role %></p>
  </section>

  <section class="voles-index">
    <h1>Voles:</h1>
    <% @voles.each do |vole| %>
      <section id="vole-<%= vole.id %>" >
        <p>Vole ID: <%= vole.id %></p>
      </section>
    <% end %>
  </section>

</section>
